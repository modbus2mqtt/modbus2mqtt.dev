{
    "build": { "dockerfile": "Dockerfile"  ,
      "args": {
            "network": "host"
      }  
    },
   "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind,consistency=cached"
    ],  
    "customizations": {
      "vscode": {
        "extensions": ["dbaeumer.vscode-eslint", "Angular.ng-template","mhutchie.git-graph", 
        "ms-vscode.vscode-typescript", "ms-vscode.js-debug-nightly", "orta.vscode-jest", 
        "firsttris.vscode-jest-runner", "esbenp.prettier-vscode"]
      }
    },
  
    "name": "modbus2mqtt.dev",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/modbus2mqtt,type=bind",
    "workspaceFolder": "/workspace/modbus2mqtt",
    "containerEnv": {
      "DISPLAY": ":0",
      "LIBGL_ALWAYS_INDIRECT": "0",
      "LOCAL_ROOT": "${localWorkspaceFolder}"
    },
    "initializeCommand": ".devcontainer/initializeCommand",
    "remoteUser": "node"
}
